{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"ignore": [],
		"indentSize": 2,
		"indentStyle": "space",
		"lineWidth": 80
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingComma": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"indentSize": 4,
			"indentStyle": "space",
			"lineWidth": 160,
			"quoteProperties": "asNeeded"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentSize": 4,
			"lineWidth": 160
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}